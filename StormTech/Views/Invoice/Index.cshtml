@model IEnumerable<StormTech.Models.Invoice_table>

@{
    ViewBag.Title = "Index";
}

<h2>Manage Invoices</h2>
<p>
    @Html.ActionLink("Add New Invoice", "Create", new { /* id=item.PrimaryKey */ }, new { @class = "greenButtonRound"} )
</p>
<table class="pure-table pure-table-bordered">
    <thead>
        <tr>
            <th>
                Supplier
            </th>
             <th>
                Invoice @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                Invoice @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                P.O.N
            </th>
            <th>
                Invoice @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                Invoice @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                Item @Html.DisplayNameFor(model => model.Purchase_Table.Item_table.Description)
            </th>
            <th></th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_Table.Item_table.Supplier_table.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_Table.Order_Number)
        </td>
        <td>
            @item.Date.ToString("dd/MM/yyyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_Table.Item_table.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Number  }, new { @class = "yellowButtonRound"}) |
            @Html.ActionLink("Details", "Details", new { id=item.Number }, new { @class = "blueButtonRound"} ) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Number }, new { @class = "redButtonRound"})
        </td>
    </tr>
}

</table