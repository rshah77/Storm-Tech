@model IEnumerable<StormTech.Models.Supplier_table>

@{
    ViewBag.Title = "Index";
}

<h2>Manage Suppliers</h2>

<p>
    @Html.ActionLink("Add New Supplier", "Create", new { /*id = item.ID*/ }, new { @class = "greenButtonRound"})
</p>
<table class="pure-table pure-table-bordered">
    <thead>
        <tr>
            <th>
                Supplier @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "yellowButtonRound"}) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }, new { @class = "blueButtonRound"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID }, new { @class = "redButtonRound"})
        </td>
    </tr>
}

</table>
